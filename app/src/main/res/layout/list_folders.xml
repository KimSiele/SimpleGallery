<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/folder_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="1dp"
    android:layout_marginTop="1dp"
    android:layout_marginEnd="1dp">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="178dp"
        android:layout_height="178dp">

        <ImageView
            android:id="@+id/folderView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="false" />

        <TextView
            android:id="@+id/folderTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/folderView"
            android:layout_alignTop="@+id/folderView"
            android:layout_alignEnd="@+id/folderView"
            android:layout_alignBottom="@+id/folderView"
            android:gravity="bottom|center"
            android:text="@string/folder_image_number"
            android:textColor="#FFF" />
    </RelativeLayout>


</RelativeLayout>